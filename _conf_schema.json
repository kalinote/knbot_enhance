{
    "markdown_image_generate": {
        "description": "长文本转Markdown图片",
        "hint": "将过长的文本转换成Markdown格式的图片，防止输出过长影响阅读。",
        "type": "object",
        "items": {
            "enable": {
                "description": "启用",
                "type": "bool",
                "default": true
            },
            "trigger_count": {
                "description": "转换触发字数",
                "type": "int",
                "default": 350
            },
            "width": {
                "description": "宽度",
                "type": "int",
                "default": 1600
            }
        }
    }
}