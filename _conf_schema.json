{
    "markdown_image_generate": {
        "description": "回复长文本转Markdown图片",
        "hint": "将过长的回复文本转换成Markdown格式的图片，防止输出过长影响阅读。",
        "type": "object",
        "items": {
            "enable": {
                "description": "启用",
                "type": "bool",
                "default": true
            },
            "trigger_count": {
                "description": "转换触发字数",
                "type": "int",
                "default": 350
            },
            "width": {
                "description": "宽度",
                "type": "int",
                "default": 1600
            },
            "generate_topic_summary": {
                "description": "生成回复总结",
                "type": "bool",
                "default": true
            }
        }
    },
    "knbot_prompt": {
        "description": "使用KNBot专用提示词",
        "hint": "部分插件功能可能需要特定提示词才能正常使用，启用此选项会在插件启动时覆盖默认人格提示词设置",
        "type": "bool",
        "default": true
    }
}